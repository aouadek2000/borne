    <script>
        function searchAddresses() {
            var address = document.getElementById('addressInput').value;
            var arrondissement = document.getElementById('arrondissement').value;
            // Redirection vers la deuxième page avec l'adresse en tant que paramètre de requête
            window.location.href = 'PPP2.html?address=' + encodeURIComponent(address)+ '&arrondissement=' + encodeURIComponent(arrondissement);
        }
    </script>
