    <script>
        function searchAddresses() {
            var address = document.getElementById('addressInput').value;
            // Redirection vers la deuxième page avec l'adresse en tant que paramètre de requête
            window.location.href = 'PPP2.html?address=' + encodeURIComponent(address);
        }
    </script>
